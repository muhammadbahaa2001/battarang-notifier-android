<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="CustomSnackbar" parent="@style/Widget.Material3.Snackbar">
    <item name="backgroundTint">?colorOnSecondaryContainer</item>
  </style>

  <style name="CustomSnackbarTextView" parent="@style/Widget.Material3.Snackbar.TextView">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textColor">?colorSecondaryContainer</item>
  </style>

  <style name="CenteredDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
    <!--  Title icon color  -->
    <item name="tint">?colorOnSurfaceVariant</item>

    <item name="materialAlertDialogTitleTextStyle">@style/CustomTitleCentered</item>
    <item name="materialAlertDialogBodyTextStyle">@style/CustomBodyText</item>
  </style>

  <style name="CustomTitleCentered" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
    <item name="android:textAppearance">?textAppearanceTitleLarge</item>
    <item name="android:textColor">?colorOnSurfaceVariant</item>
  </style>

  <style name="CustomBodyText">
    <item name="android:textColor">?colorOnSecondaryContainer</item>
  </style>

  <style name="PairingDialog" parent="CenteredDialog">
    <item name="buttonBarPositiveButtonStyle">@style/ScanQrButton</item>
  </style>

  <style name="ScanQrButton" parent="Widget.Material3.Button">
    <item name="iconSize">18dp</item>
    <item name="icon">@drawable/ic_qr_code</item>
  </style>

  <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
  </style>

  <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
    <item name="enableEdgeToEdge">true</item>
    <item name="android:maxWidth">512dp</item>
    <item name="behavior_fitToContents">false</item>
    <item name="paddingBottomSystemWindowInsets">false</item>
  </style>

  <style name="ServiceToggleCard" parent="Widget.Material3.CardView.Filled">
    <item name="cardBackgroundColor">?colorPrimaryContainer</item>
  </style>
</resources>
