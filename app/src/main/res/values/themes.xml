<resources>
  <!-- For static theme configurations: https://material.io/develop/android/theming/dark -->
  <style name="Theme.Base" parent="Theme.Material3.Dark.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/teal_700</item>
    <item name="colorOnPrimary">@android:color/black</item>

    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/cyan_100</item>
    <item name="colorOnSecondary">@android:color/black</item>
  </style>

  <!-- Great resource for configuring Window stuff -->
  <!-- https://medium.com/androiddevelopers/animating-your-keyboard-fb776a8fb66d -->
  <style name="Theme.Main" parent="Theme.Base">
    <!-- Implement Edge to Edge: https://developer.android.com/training/gestures/edge-to-edge -->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:navigationBarColor">@android:color/transparent</item>
  </style>
</resources>
